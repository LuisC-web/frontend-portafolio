---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import Typewriter from "astro-typewriter";
import GithubIcon from "../assets/icons/GithubIcon.astro";
import LinkedInIcon from "../assets/icons/LinkedInIcon.astro";
import SocialPill from "../components/SocialPill.astro";
---

<Layout>
    <main class="max-w-2xl mx-auto py-20">
        <h1 class="text-2xl mb-3 font-semibold">
            Hey, soy <Typewriter
                messages={["LuisC-web", "Desarrollador web", "Desarrollador móvil", "y... linux"]}
                class="text-orange-400/90"
            />
            <Badge>Disponible para trabajar</Badge>
        </h1>
        <h2>
            1 año de experiencia. <span class="text-orange-400/80">
                Desarrollador web, administrador de sistemas linux, desarrolador de apps móvil y estudiante de Ing. Electrónica</span
            >. De Córdoba, Colombia. Ubicado en Bogotá D.C.
        </h2>
        <nav class="flex gap-2 mt-2">
            <SocialPill>
                <GithubIcon class="w-6 h-6 ∑" />LuisC-web
            </SocialPill>
            <SocialPill>
                <LinkedInIcon class="w-6 h-6" />LuisC-web
            </SocialPill>
        </nav>
    </main>
</Layout>
